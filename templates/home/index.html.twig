{% extends 'base.html.twig' %}

{% block title %}Registrar Personas{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1 class="text-center">Registrar Personas! âœ…</h1>
    <div class="section-form p-4 mb-4 rounded shadow-sm bg-light border border-gray">
        <form id="personaForm" class="form-inline row">
            <div class="form-group mb-2 col-md-3">
                <label for="name" class="sr-only">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Name" required>
            </div>
            <div class="form-group mb-2 col-md-3">
                <label for="lastName" class="sr-only">LastName</label>
                <input type="text" class="form-control" id="lastName" placeholder="LastName" required>
            </div>
            <div class="form-group mb-2 col-md-3">
                <label for="dob" class="sr-only">Date Of Birth</label>
                <input type="date" class="form-control" id="dob" placeholder="Date Of Birth" required>
            </div>
            <div class="form-group mb-2 col-md-3 d-flex align-items-center">
                <button type="submit" class="btn btn-primary mx-auto">Registrar</button>
            </div>
        </form>
    </div>
    <div class="section-table p-4 rounded shadow-sm bg-light border border-grayt">
        <div class="row mb-4">
            <div class="col-md-3">
                <input type="text" id="searchName" class="form-control" placeholder="Search by Name">
            </div>
            <div class="col-md-3">
                <input type="text" id="searchLastName" class="form-control" placeholder="Search by LastName">
            </div>
            <div class="col-md-3">
                <input type="date" id="searchDob" class="form-control" placeholder="Search by Date Of Birth">
            </div>
            <div class="col-md-3">
                <button id="searchButton" class="btn btn-secondary">Search</button>
            </div>
        </div>
        <table class="table table-bordered mt-4">
            <thead class="thead-dark table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>LastName</th>
                    <th>Date Of Birth</th>
                </tr>
            </thead>
            <tbody id="personasTableBody">
                <!-- Dynamic content will be inserted here by JavaScript -->
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('pruebas') }}
{% endblock %}
